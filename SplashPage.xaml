<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Calendar.SplashPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="WhiteSmoke">
    <!--  cor de fundo da tela BackgroundColor="MediumVioletRed">  -->

    <Grid>
        <!--  Stack central para imagem + texto  -->
        <VerticalStackLayout
            x:Name="MainLayout"
            HorizontalOptions="Center"
            Opacity="0"
            Spacing="20"
            VerticalOptions="Center">

            <Image
                HeightRequest="100"
                HorizontalOptions="Center"
                Source="calendario.png"
                VerticalOptions="Center"
                WidthRequest="100" />
            <!--  reduz o tamanho da imagem  -->

            <Label
                FontAttributes="Bold"
                FontSize="22"
                HorizontalTextAlignment="Center"
                Text="Bem-vindo(a)!"
                TextColor="MediumVioletRed" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
